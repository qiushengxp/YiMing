<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiming.mapper.system.SysUserRoleMapper">

    <resultMap id="SysUserRoleResult" type="com.yiming.domain.system.SysUserRole">
        <!--@Table sys_user_role-->
        <result property="uid" column="uid"/>
        <result property="roleId" column="role_id"/>
    </resultMap>

    <!--查询配置-->
    <sql id="selectVo">
        select
          uid, role_id
        from yiming.sys_user_role
    </sql>
    
    <!-- 查询条件 -->
	<sql id="sqlwhereSearch">
		<where>
		    id > 0
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
		</where>
	</sql>

<!--查询指定行数据-->
    <select id="selectById" resultMap="SysUserRoleResult">
        <include refid="selectVo"/>
        where  = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="selectAllByLimit" resultMap="SysUserRoleResult">
        <include refid="selectVo"/>
        <include refid="sqlwhereSearch" />
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectAll" resultMap="SysUserRoleResult">
        <include refid="selectVo"/>
        <include refid="sqlwhereSearch" />
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into yiming.sys_user_role(
            <if test="uid != null">
            uid,             </if>
            <if test="roleId != null">
            role_id            </if>
)
        values (
                <if test="uid != null">
                #{uid},                 </if>
                <if test="roleId != null">
                #{roleId}                </if>
)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yiming.sys_user_role
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
        </set>
        where  = #{}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yiming.sys_user_role where  = #{}
    </delete>

</mapper>