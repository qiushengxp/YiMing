<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiming.mapper.system.SysAuthRuleMapper">

    <resultMap id="SysAuthRuleResult" type="com.yiming.domain.system.SysAuthRule">
        <!--@Table sys_auth_rule-->
        <result property="id" column="id"/>
        <result property="conditions" column="conditions"/>
        <result property="url" column="url"/>
        <result property="title" column="title"/>
        <result property="status" column="status"/>
        <result property="pid" column="pid"/>
        <result property="icon" column="icon"/>
        <result property="sort" column="sort"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="deleteTime" column="delete_time"/>
    </resultMap>

    <!--查询配置-->
    <sql id="selectVo">
        select
          id, conditions, url, title, status, pid, icon, sort, create_time, update_time, delete_time
        from yiming.sys_auth_rule
    </sql>
    
    <!-- 查询条件 -->
	<sql id="sqlwhereSearch">
		<where>
		    id > 0
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="conditions != null and conditions != ''">
                and conditions = #{conditions}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="icon != null and icon != ''">
                and icon = #{icon}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="deleteTime != null">
                and delete_time = #{deleteTime}
            </if>
		</where>
	</sql>

<!--查询指定行数据-->
    <select id="selectById" resultMap="SysAuthRuleResult">
        <include refid="selectVo"/>
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="selectAllByLimit" resultMap="SysAuthRuleResult">
        <include refid="selectVo"/>
        <include refid="sqlwhereSearch" />
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectAll" resultMap="SysAuthRuleResult">
        <include refid="selectVo"/>
        <include refid="sqlwhereSearch" />
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into yiming.sys_auth_rule(
            <if test="conditions != null and conditions != ''">
            conditions,             </if>
            <if test="url != null and url != ''">
            url,             </if>
            <if test="title != null and title != ''">
            title,             </if>
            <if test="status != null">
            status,             </if>
            <if test="pid != null">
            pid,             </if>
            <if test="icon != null and icon != ''">
            icon,             </if>
            <if test="sort != null">
            sort,             </if>
            <if test="createTime != null">
            create_time,             </if>
            <if test="updateTime != null">
            update_time,             </if>
            <if test="deleteTime != null">
            delete_time            </if>
)
        values (
                <if test="conditions != null and conditions != ''">
                #{conditions},                 </if>
                <if test="url != null and url != ''">
                #{url},                 </if>
                <if test="title != null and title != ''">
                #{title},                 </if>
                <if test="status != null">
                #{status},                 </if>
                <if test="pid != null">
                #{pid},                 </if>
                <if test="icon != null and icon != ''">
                #{icon},                 </if>
                <if test="sort != null">
                #{sort},                 </if>
                <if test="createTime != null">
                #{createTime},                 </if>
                <if test="updateTime != null">
                #{updateTime},                 </if>
                <if test="deleteTime != null">
                #{deleteTime}                </if>
)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yiming.sys_auth_rule
        <set>
            <if test="conditions != null and conditions != ''">
                conditions = #{conditions},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="deleteTime != null">
                delete_time = #{deleteTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yiming.sys_auth_rule where id = #{id}
    </delete>

</mapper>