<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiming.mapper.system.SysRoleRuleMapper">

    <resultMap id="SysRoleRuleResult" type="com.yiming.domain.system.SysRoleRule">
        <!--@Table sys_role_rule-->
        <result property="roleId" column="role_id"/>
        <result property="ruleId" column="rule_id"/>
    </resultMap>

    <!--查询配置-->
    <sql id="selectVo">
        select
          role_id, rule_id
        from yiming.sys_role_rule
    </sql>
    
    <!-- 查询条件 -->
	<sql id="sqlwhereSearch">
		<where>
		    id > 0
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="ruleId != null">
                and rule_id = #{ruleId}
            </if>
		</where>
	</sql>

<!--查询指定行数据-->
    <select id="selectById" resultMap="SysRoleRuleResult">
        <include refid="selectVo"/>
        where  = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="selectAllByLimit" resultMap="SysRoleRuleResult">
        <include refid="selectVo"/>
        <include refid="sqlwhereSearch" />
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectAll" resultMap="SysRoleRuleResult">
        <include refid="selectVo"/>
        <include refid="sqlwhereSearch" />
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into yiming.sys_role_rule(
            <if test="roleId != null">
            role_id,             </if>
            <if test="ruleId != null">
            rule_id            </if>
)
        values (
                <if test="roleId != null">
                #{roleId},                 </if>
                <if test="ruleId != null">
                #{ruleId}                </if>
)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yiming.sys_role_rule
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="ruleId != null">
                rule_id = #{ruleId},
            </if>
        </set>
        where  = #{}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yiming.sys_role_rule where  = #{}
    </delete>

</mapper>